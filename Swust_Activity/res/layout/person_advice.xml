<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/note_item_rightdown">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">
        
        
                <ImageView
                    android:id="@+id/advice_back" 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back_logo"
                    />
                
            
            <Button 
            android:id="@+id/adviceComplete"
            android:layout_width="wrap_content"
            android:layout_height="45dp"    
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="22dp"
            android:text="提交"
            android:textColor="#FFFFFF"/>
        
       
        
        </RelativeLayout>
      </LinearLayout>

    <EditText
			android:id="@+id/adviceContent"
			android:hint="由于期末原因到来，事务繁多，这只是一个测试版，大家有什么建议尽管提，下学期伊始会发布正式版，敬请期待！！"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:height="500dp"
			android:paddingTop="5dp"
			android:paddingLeft="30dp"
			android:paddingRight="30dp"
			android:paddingBottom="23dp"
			android:lineSpacingExtra="4dp"
			android:singleLine="false"
			android:gravity="top"
			android:background="@null"
			android:textSize="20dp"
		/>
</LinearLayout>
