<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            
            >
            
            <LinearLayout 
                android:id="@+id/detail_activity_img"   
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"        
                android:layout_alignParentLeft="true"  
                android:padding="20dp"  
               >  
          
            <ImageView
                android:id="@+id/school_activity_detail_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/img_default" />
          
           </LinearLayout>  
   
           <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/detail_activity_img"  >

        <TextView
                   android:id="@+id/detail_ac_title_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="标题"
                   android:textSize="20dp"
                   android:paddingTop="15dp"
                   android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/detail_ac_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="组织者"
            android:textColor="#624439"
            android:textSize="17dp" />

        <TextView 
            android:id="@+id/detail_ac_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#624439"
            android:textSize="17dp"
            android:paddingTop="2dp"
            android:layout_below="@id/detail_ac_person_text"   
               />
            <TextView 
            android:id="@+id/detail_ac_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textColor="#624439"
            android:textSize="17dp"
            android:paddingTop="2dp"      
            android:layout_below="@id/detail_ac_time_text"   
               />
                </LinearLayout>
            </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/note_item_rightdown">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:paddingLeft="10dp"
                android:textSize="15dp"/>
            
            <TextView 
        
               android:id="@+id/detail_text"
               android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			   android:text="我是一个超超超级大大帅哥哥，你是一个傻傻傻逼。哟哟哟切克闹，
			       哈哈哈哈。你是傻逼，反正也不会怪我呦呦呦！！！！！！"
			   android:height="500dp"
			   android:paddingTop="5dp"
			   android:paddingLeft="30dp"
			   android:paddingRight="30dp"
			   android:paddingBottom="23dp"
			   android:lineSpacingExtra="4dp"
			   android:singleLine="false"
		       android:gravity="top"
			   android:background="@null"
			   android:textSize="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
