<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/selector" >
	
    
	<LinearLayout android:id="@+id/activity_img"   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"        
        android:layout_alignParentLeft="true"    
        >  
          
        <ImageView 
        android:id="@+id/school_activity_img"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/img_default"
        /> 
          
    </LinearLayout>  
   
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/activity_img"  >
        
    
        <TextView 
            android:id="@+id/ac_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            
               />

        <TextView
            android:id="@+id/ac_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="组织者"
            android:textColor="#624439"
            android:textSize="15dp" />

        <TextView 
            android:id="@+id/ac_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#624439"
            android:textSize="15dp"
            android:paddingTop="2dp"
            android:layout_below="@id/ac_person_text"   
               />
        <TextView 
            android:id="@+id/ac_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textColor="#624439"
            android:textSize="15dp"
            android:paddingTop="2dp"      
            android:layout_below="@id/ac_time_text"   
               />
        </LinearLayout>
</LinearLayout>
